@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{


    <li class="ml-xl-3 login">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="ml-xl-3 login">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
	<li class="ml-xl-3 login"><a asp-area="Identity" asp-page="/Account/Login"><span class="border-left pl-xl-4"></span>Log In</a></li>
	<li class="ml-xl-3 login"><a asp-area="Identity" asp-page="/Account/Register"><span class="border-left pl-xl-4"></span>Register</a></li>
}

